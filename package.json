{
  "name": "revup-shopping",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm build:packages && pnpm build:apps",
    "build:packages": "pnpm --filter '@packages/*' run build",
    "build:apps": "pnpm --filter 'apps/*' run build",
    "build:all": "pnpm --filter prisma... run build && pnpm --filter web run build",
    "dev": "pnpm --filter web run dev",
    "dev:packages": "pnpm --filter '@packages/*' run dev",
    "clean": "pnpm --recursive exec rm -rf node_modules && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.17.46",
    "typescript": "^5.8.3",
    "date-fns": "^3.6.0"
  },
  "packageManager": "pnpm@8.15.0"
}
